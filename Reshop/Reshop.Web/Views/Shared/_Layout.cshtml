<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eshop.Web</title>

    <link href="~/css/font-awesome.min.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/bootstrap-rtl.css" rel="stylesheet" />

    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body class="rtl">

<header id="header" class="fixed-top header-transparent">


        <div class="container d-flex align-items-center">

            <h1 class="logo"><a asp-controller="Product" asp-action="Index">Reshop</a></h1>


            <nav class="main-nav d-none d-lg-block">
                <ul>
                    <li class="active"><a asp-controller="Product" asp-action="Index">خانه</a></li>

                    @await Html.PartialAsync("Category/DropDown/_CategoriesDropDown")

                    <li><a asp-area="AdminPanel" asp-controller="AdminsPanel" asp-action="Index">پنل مدیریت</a></li>
                    
                    @await Html.PartialAsync("_LoginPartial")
                </ul>
            </nav>
        </div>
    </header>



    <div class="container" style="margin-top: 100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>




    <div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" id="form-modal">
        <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header card-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>




    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Eshop.Web - <a asp-controller="Product" asp-action="Index">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
