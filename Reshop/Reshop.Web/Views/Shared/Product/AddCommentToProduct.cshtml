@model CommentForProduct

<div>
    <form asp-controller="Product" asp-action="AddCommentToProduct" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="FullName" />
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="DateTime" />


        <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="ارسال نظر" class="btn btn-success" />
        </div>

    </form>
</div>