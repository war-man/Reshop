@model AddOrEditUserViewModel
@{
    ViewData["Title"] = "EditUser";
}

<h1>EditUser</h1>

<div class="text-center">
    <h1>ویرایش کاربر</h1>
</div>
<hr />

<form asp-action="EditUser" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی را وارد کنید">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" placeholder="نام کاربری را وارد کنید">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="ایمیل را وارد کنید">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="شماره تلفن را وارد کنید">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" placeholder="ادرس را وارد کنید">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="رمز عبور را وارد کنید">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">ویرایش کاربر</button>
    </div>

</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}