@model AddOrRemoveUserFromRoleViewModel
@{
    ViewData["Title"] = "DeleteUserToRole";
}

<div class="text-center">
    <h1>حذف کاربر از مقام</h1>
</div>
<hr />


@if (!Model.RolesName.Any())
{
    <div class="alert alert-danger" style="margin-top: 15px;">
        هیچ مقامی یافت نشد
    </div>
}
else
{
    <div class="card mt-2">
        <div class="card-header text-center">
            <h2>  مقام های کاربر</h2>
        </div>


        <form  asp-action="RemoveUserFromRole" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="@Model.UserId" />
            
            @foreach (var item in Model.RolesName)
            {
                <div class="card-body">
                    <div class="form-group">
                        <input type="checkbox" name="SelectedRoles" value="@item" />@item
                    </div>
                </div>
            }

            <div class="card-footer">
                <button class="btn btn-primary" type="submit">ثبت</button>
            </div>
        </form>
    </div>
}