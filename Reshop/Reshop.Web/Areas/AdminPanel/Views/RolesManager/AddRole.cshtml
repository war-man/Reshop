@model RoleViewModel
@{
    ViewData["Title"] = "AddRole";
}

<div class="text-center">
    <h1>افزودن قانون</h1>
</div>
<hr />

<form  asp-action="AddRole" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div>
        <button type="submit" class="btn btn-primary">افزودن مقام</button>
    </div>
</form>
<a asp-action="Index" class="btn btn-danger mt-3">بازگشت</a>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}