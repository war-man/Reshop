@model AddOrEditProductViewModel

@{ Layout = null; }

<form asp-action="AddOrEditProduct" method="post" enctype="multipart/form-data" onsubmit="return AddProductAjaxPost(this);" autocomplete="off">
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />


    <div class="row mb-2">
        <div class="col-md-7 card" style="margin-right: 27px">

            <div class="card-body">
                <div class="row">
                    <div class="form-group col-md-12 ">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row ">
                    <div class="form-group col-md-12">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row ">
                    <div class="form-group col-md-6">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="QuantityInStock"></label>
                        <input asp-for="QuantityInStock" class="form-control" />
                        <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                    </div>
                </div>
                <div class="row ">
                    <div class="form-group col-md-12">
                        <label asp-for="Picture"></label>
                        <input asp-for="Picture" class="form-control-file" />
                        <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row card-footer">
                <div class=" col-md-6">
                    <input type="submit" value="@(Model.Id == 0 ? "ذخیره کردن" : "بروز رسانی")" class="btn btn-success btn-block" />
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger btn-block" data-dismiss="modal" aria-label="Close">
                        خروج
                    </button>
                </div>
            </div>

        </div>
        @if (Model.Categories != null)
        {
            <div class="col-md-4" style="margin-right: 12px">

                <div class="row card">
                    <div class="card-body pre-scrollable">
                        @foreach (var item in Model.Categories)
                        {
                            <div class="form-group ">
                                <input type="checkbox" name="SelectedCategories" value="@item.Id" /> @item.Name
                            </div>
                        }
                    </div>
                </div>

            </div>
        }
    </div>

</form>