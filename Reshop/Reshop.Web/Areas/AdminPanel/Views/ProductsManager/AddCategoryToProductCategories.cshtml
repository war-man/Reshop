@model AddCategoryToProductCategories
@{
    ViewData["Title"] = "AddProductToCategory";
}

<div class="text-center">
    <h1>افزودن محصول به گروه</h1>
</div>
<hr />

@if (Model == null)
{
    <div class="alert alert-danger" style="margin-top: 15px;">
        هیچ مقامی یافت نشد
    </div>
}
else
{
    <div class="card mt-2">
        <div class="card-header text-center">
            <h2>گروه ها</h2>
        </div>
        <form asp-action="AddCategoryToProductCategories" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <input type="hidden" asp-for="ProductId" />

            @foreach (var category in Model.Categories)
            {
                <div class="form-group card-body">
                    <input type="checkbox" name="SelectedCategories" value="@category.Id" />@category.Name
                </div>
            }

            <div class="card-footer">

                <button class="btn btn-success" type="submit">افزودن گروه</button>

                <a asp-action="Index" class="btn btn-danger">بازگشت</a>

            </div>
        </form>
    </div>
}