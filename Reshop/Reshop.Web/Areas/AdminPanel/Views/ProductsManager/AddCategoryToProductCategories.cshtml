@model AddCategoryToProductCategories
@{
    Layout = null;
}
@if (Model == null)
{
    <div class="alert alert-danger">
        هیچ مقامی یافت نشد
    </div>
}
else
{
    <form asp-action="AddCategoryToProductCategories" method="post" enctype="multipart/form-data" onsubmit="return AddProductAjaxPost(this);" autocomplete="off">
        <div asp-validation-summary="ModelOnly"></div>

        <input type="hidden" asp-for="ProductId" />

        <div class="row mb-2">
            <div class="col-md-11 card" style="margin-right: 33px">

                @if (Model.Categories != null)
                {
                    <div class="card-body pre-scrollable">
                        @foreach (var item in Model.Categories)
                        {
                            <div class="form-group col-md-6">
                                <input type="checkbox" name="SelectedCategories" value="@item.Id" /> @item.Name
                            </div>
                        }
                    </div>

                }
            </div>
        </div>
        <div class="row card-footer">
            <div class="col-md-6">
                <input type="submit" value="افزودن گروه" class="btn btn-success btn-block" />
            </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal" aria-label="Close">
                    خروج
                </button>
            </div>
        </div>

    </form>
}